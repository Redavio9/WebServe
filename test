version: "3"
services :
  mysql_database:
    image : mysql
    restart : always
    enviroment :
      MYSQL_ROOT_PASSWORD: 1234
      MYSQL_DATABASE: wq_db
      MYSQL_USER: wp_user
      MYSQL_PASSWORD: 1234
    volumens:
      - mysql:/var/lib/mysql
  Wordpress:
    depends_on:
      -mysql_database
    image: wordpress:latest
    restart: always
    ports:
      - "8000:80"
    enviroment :
      WORDPRESS_DB_HOST: mysql_databse:3306
      WORDPRESS_DB_USER: wp_user
      WORDPRESS_DB_PASSWORD: 1234
      WORDPRESS_DB_NAME: wp_db
    volumes:
      ["./:/var/www/html"]
  volumes:
  mysql: {}